<%	int money = Integer.parseInt(request.getParameter("money"));

	int tmoney = (money / 1000) * 1000;
	int arr [] = {50000,10000,5000,1000};
	int num [] = new int[4];
	
	for (int t : arr) {
		int c = tmoney /t;
		if (0 < c) {
			System.out.printf("%5d원 * %d장 = %d원\n", t,c,t*c);
				for (int n : num) {
					int i = 0;
					num[i] = c;
				}
		}
			
		else 
			System.out.printf("%5d원\n",t);
		tmoney -= (t * c);
	}
		
%>
